#container {
	margin: 0 auto;
}

#content {
	padding-bottom: 20px;
}

#intro {
	margin-bottom: 40px;
}

#sign_in {
	margin: 80px 50px;
	text-align: center;
}

#sign_in .button {
	font-size: 30px;
}

#sign_in img {
	margin-bottom: -6px;
	margin-right: 6px;
}

#index {
	padding: 30px 0;
}

#index h3 {
	margin-top: 0;
}

#list_container {
	font-size: 10px;
	width: 400px;
	margin-bottom: 50px;
}

tr.highlight {
	background-color: #dfd;
}

td.tomato_duration {
	width: 110px;
}

#timer_container {
	width: 400px;
	text-align: center;
	position: absolute;
	top: 20px;
	right: 0;
	padding: 20px;
	background: #F9F9F9;
	border: 1px solid #EEE;
}

#timer_container.round_left {
	-moz-border-radius: 6px 0 0 6px;
	-webkit-border-radius: 6px 0 0 6px;
	border-radius: 6px 0 0 6px;
	border: 1px solid #CCC;
	border-right: 0 none;
}

#timer_container.round_right {
	-moz-border-radius: 0 6px 6px 0;
	-webkit-border-radius: 0 6px 6px 0;
	border-radius: 0 6px 6px 0;
	border-left: 0 none;
}

#timer {
	font-size: 128px;
	margin: 20px 0 40px;
}

#start_container {
	width: 500px;
	text-align: center;
	margin: 0 auto 80px;
}

a#start {
	font-size: 54px;
}

a#squash {}

p#squash_hint {
	font-size: 10px;
}

#new_tomato_form {
	text-align: left;
}

#leaderboards {
	margin-bottom: 50px;
}

#leaderboards .leaderboard_list {
	width: 220px;
	margin-right: 5px;
}

.leaderboard_list li {
	list-style-position: inside;
	margin-bottom: 5px;
	padding: 2px;
}

.leaderboard_list .count {
	margin-left: 30px;
	font-size: 10px;
}

.leaderboard_list li.you {
	background-color: #f0f0f0;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}

#user {
	margin-bottom: 40px;
}

.chart {
	width: 900px;
	height: 400px;
	margin-bottom: 20px;
}

.chart.overview {
	width: 900px;
	height: 70px;
	margin-bottom: 40px;
}

#tomatoes_by_hour.chart {
	margin-bottom: 40px;
}

#progress_bar {
	top: 0;
	left: 0;
	width: 0;
	height: 100%;
	background-color: rgba(0, 255, 0, .5);
	position: absolute;
	z-index: 100;
}

#request_notification_permission {
	margin-bottom: 20px;
}